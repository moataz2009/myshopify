{% assign wClass = 'w-full laptop:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
<div class="relative section-hero">
  <div class="{{wClass}} h-full absolute transform left-1/2 -translate-x-1/2">
    <div
      class="absolute transform w-full px-6 md:px-0 md:w-1/2 xl:w-1/3 top-6 sm:top-12 left-0 md:top-1/2 md:-translate-y-1/2 text-center md:text-left">
      <h1 class="text-2xl sm:text-3xl mb-4 sm:mb-5 font-bold">
        MagEZ Case Pro <br class="block sm:hidden md:block">
        for iPad mini 6
      </h1>
      <p class="text-sm sm:text-base max-w-md md:max-w-sm mx-auto md:mx-0">
        The world's first iPad mini 6 case to give you a wireless-charging-like experience.
      </p>
      <div class="my-5 sm:my-8 w-4/5 sm:w-max md:w-2/3 md:max-w-sm mx-auto md:mx-0 text-left">
        <ul class="list-disc list-outside text-xs sm:text-sm" style="margin-left: 17px;">
          <li class="mt-2">More protective.</li>
          <li class="mt-2">Wireless charging experience with the included MagSafe-like charger.</li>
          <li class="mt-2">Compatible with the upcoming wireless charging stand.</li>
          <li class="mt-2">Never drop your Apple Pencil again.</li>
        </ul>
      </div>
      <p class="text-sm sm:text-base">
        Coming Soon.
      </p>
      <p class="text-sm sm:text-base mt-1">
        Sign up now so you won't miss them.
      </p>
      <div class="privy-embed-form w-5/6 mx-auto md:mx-0 md:w-3/5 xl:w-2/3" data-campaign="3339680"></div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'magez-casepro-ipad-mini6-signup.webp' | asset_url}}" media="(min-width: 1025px)">
    <source data-srcset="{{'magez-casepro-ipad-mini6-signup-m.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'magez-casepro-ipad-mini6-signup-s.webp' | asset_url}}"
      alt="MagEZ Case Pro for iPad mini 6" class="block w-full h-full object-cover lazyload">
  </picture>
</div>
<style>
  .section-hero {
    height: 216.5vw;
    min-height: 100vh;
  }

  @media screen and (min-width:768px){
    .section-hero {
      height: 133vw;
    }
  }

  @media screen and (min-width:1025px){
    .section-hero {
      height: 56.25vw;
    }
    .privy-embedded-form-3339680{
      margin: 0 !important;
    }
  }
</style>