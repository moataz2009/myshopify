{% render 'buy-bar', product: all_products[collection.handle] %}

{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full md:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_b = 'px-3 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-28' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

{% assign absoluteContentBoxClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto px-6 lg:px-0 transform sm:left-1/2 sm:-translate-x-1/2' %}
{% assign absoluteContentClass = 'transform w-full sm:w-2/5 xl:w-1/3 max-w-md bottom-8 sm:bottom-1/2 sm:translate-y-1/2' %}
{% assign absoluteContentClass_center = 'absolute text-center z-10 transform w-full px-6 sm:px-0 sm:w-4/5 md:w-1/2 xl:w-1/3 max-w-lg top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2' %}
{%- comment -%}第一屏{%- endcomment -%}
<div class="w-full relative">
  <div class="absolute {{absoluteContentBoxClass}} sm:h-full top-28 sm:top-0">
    <div class="absolute absolute text-center z-10 transform w-full px-6 sm:px-0 sm:w-4/5 md:w-1/2 xl:w-1/3 max-w-lg top-1/2 -translate-y-1/2 left-1/2 sm:left-1/4 -translate-x-1/2">
      <h3 class="text-3xl md:text-4xl font-bold mb-4">
        MagEZ&nbsp;Case&nbsp;<br class="sm:hidden">for&nbsp;AirPods&nbsp;3
      </h3>
      <p class="text-sm sm:text-base text-white">
        The minimalist aramid fiber case with MagSafe compatibility.
      </p>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'magezcase-airpods-3-section1.webp' | asset_url}}" media="(min-width: 1281px)">
    <source data-srcset="{{'magezcase-airpods-3-section1-m.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section1-s.webp' | asset_url}}"
      alt="MagEZ Case for Airpods 3" class="block w-full h-full object-cover lazyload">
  </picture>
</div>

<div class="w-full bg-gray-800 {{pdClass}} flex flex-col">
  <div id="trigger-video_sleeve"></div>
  <div class="mx-auto">
    <video loop="loop" muted playsinline webkit-playsinline x5-video-player-type="h5" x5-video-player-fullscreen="true"
    x5-video-orientation="portraint" preload="none" autoplay style="object-fit:contain" class="lazyload"
    id="video-sleeve">
    <source src="{{ 'magezcase-airpods-3-section2.mp4' | asset_url }}" type="video/mp4">
    <source src="{{ 'magezcase-airpods-3-section2.webm' | asset_url }}" type="video/webm"> 
  </video>
  </div>
  <div class="mx-auto mb-12 w-11/12 sm:w-2/6 md:w-2/3 xl:w-2/5 max-w-md text-center">
      <h3 class="{{titleSize}} ">
        MagSafe Compatible
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}} mx-auto">
      <p class="{{descSize}}">
        With built-in MagSafe magnets, securely attach and charge your AirPods 3 through the case using your MagSafe charger.
      </p>
  </div>  
  <div id="trigger-video_safe"></div>
  <div class="{{wClass}} flex flex-col sm:flex-row items-stretch justify-between">
    <div class="w-full mb-6 sx:mb-12 sm:mb-0">
      <video loop="loop" muted playsinline webkit-playsinline x5-video-player-type="h5" x5-video-player-fullscreen="true"
      x5-video-orientation="portraint" preload="none" autoplay style="object-fit:cover" class="w-full h-full lazyload block"
      id="video-safe">
      <source src="{{ 'magezcase-airpods-3-section3.mp4' | asset_url }}" type="video/mp4">
      <source src="{{ 'magezcase-airpods-3-section3.webm' | asset_url }}" type="video/webm"> 
    </video>
    </div>

    <div class="w-full mx-auto sm:pl-6 sm:w-3/6">
      <picture class="block h-full">
        <source data-srcset="{{'magezcase-airpods-3-section4.webp' | asset_url}}" media="(min-width: 1281px)">
        <source data-srcset="{{'magezcase-airpods-3-section4-m.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section4-s.webp' | asset_url}}"
          alt="MagEZ Case for Airpods 3" 
          class="block w-full h-full lazyload object-cover">
      </picture>
    </div>
  </div>
</div>
 
{%- comment -%}第5屏{%- endcomment -%}
<div class="bg-gray-850">
  <div class="{{wClass}}  {{pdClass}}  flex flex-col sm:flex-row items-center justify-between">
    <div class="w-full sm:w-2/6 max-w-md">
      <h3 class="{{titleSize}}"> 
        Exclusive Luxury
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}} mb-6">
        Used exclusively for PITAKA's premium cases, 600D has a more delicate weave and is smooth to the touch. 
      </p>
    </div>
    <div class="w-full sm:w-5/8">  
      <picture>
        <source data-srcset="{{'magezcase-airpods-3-section5.webp' | asset_url}}" media="(min-width: 1281px)">
        <source data-srcset="{{'magezcase-airpods-3-section5-m.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section5-s.webp' | asset_url}}"
          alt="MagEZ Case for Airpods 3"
          class="block mx-auto w-full lazyload">
      </picture>
    </div>
  </div>
</div>
{%- comment -%}第6屏{%- endcomment -%}
<div class="sm:bg-gray-800 {{pdClass}} px-6 pt-16 ">
  <div class="{{wClass_6}} flex flex-col  items-center justify-between">
    <div class="w-full sm:w-4/6 max-w-xl text-center">
      <h3 class="{{titleSize}}">
        3D Grip™ Technology
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}} mx-auto">
      <p class="{{descSize}}">
        Our unique vacuum forming process creates a nonslip texture that improves grip while also feeling soft to the touch.
      </p>
    </div>
    <div class="w-full ">
      <picture>
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section6.webp' | asset_url}}"
          alt="MagEZ Case 2 for iPhone 13 Series"
          class="block mx-auto w-full sm:w-full transform translate-y-16 sm:translate-y-20 lg:translate-y-28 lazyload">
      </picture>
    </div>
  </div>
</div>
<div class="bg-gray-850 pt-16 sm:pt-20 lg:pt-24 px-6 md:px-0">
  <div class="{{wClass}}  {{pdClass_b}} flex flex-col-reverse sm:flex-row items-center justify-between">
    <div class="w-full sm:w-5/8">
      <picture>
        <source data-srcset="{{'magezcase-airpods-3-section7.webp' | asset_url}}" media="(min-width: 1281px)">
        <source data-srcset="{{'magezcase-airpods-3-section7-m.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section7-s.webp' | asset_url}}"
          alt="MagEZ Case for Airpods 3"
          class="block mx-auto w-full lazyload">
      </picture>
    </div> 
    <div class="w-full sm:w-2/6 max-w-md">
      <h3 class="{{titleSize}}"> 
        A Form-fitting Design
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}} mb-6">
        Precision-cut allowing easy access to the AirPods 3 LED charging indicator and Lightning port without removing the case. This minimalist case snuggly fits your AirPods 3, retaining its pocket size and shape.
      </p>
    </div>
  </div>
</div>
{%- comment -%}第7屏{%- endcomment -%}
<div class="{{wClass}} {{pdClass_b}}">
  <div class="grid grid-cols-1 sm:grid-cols-1 gap-3 sm:gap-4 md:gap-6 ">
    <div>
      <picture>
        <source data-srcset="{{'magezcase-airpods-3-section8-1.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section8-1-s.webp' | asset_url}}"
          alt="MagEZ Case for Airpods 3"
          class="block mx-auto w-full lazyload">
      </picture>
    </div>
    <div>
      <picture>
        <source data-srcset="{{'magezcase-airpods-3-section8-2.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'magezcase-airpods-3-section8-2-s.webp' | asset_url}}"
          alt="MagEZ Case for Airpods 3"
          class="block mx-auto w-full lazyload">
      </picture>
    </div>
  </div>
</div>
