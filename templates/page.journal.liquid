{% assign subDescClass = 'text-base text-gray-400 mb-8 sm:mb-12' %}
{%- comment -%}grig排版分布及间距{%- endcomment -%}
{% assign gapClass = 'grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2' %}
