{% assign pdClass = 'px-6 lg:px-0 py-20 sm:py-28' %}
{%- comment -%}主标题h1尺寸{%- endcomment -%}
{% assign titleSize = 'text-2xl sm:text-3xl font-bold' %}
{%- comment -%}主标题h1距底部距离（紧）{%- endcomment -%}
{% assign titleMb_tight = 'mb-6 sm:mb-6' %}
{%- comment -%}主标题h1距底部距离（松）{%- endcomment -%}
{% assign titleMb_loose = 'mb-12' %}
{%- comment -%}正文p尺寸颜色{%- endcomment -%}
{% assign descSize = 'text-base text-gray-400' %}
