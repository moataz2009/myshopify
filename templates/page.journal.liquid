{% assign titleDecoMy = 'block mt-4 mb-6' %}

{%- comment -%}PITAKA Journal{%- endcomment -%}
  <div class="{{pdClass}} bg-gray-800">
    <div class="{{wClass}}">
      <div class="{{titleBox_center}}">
        <h3 class="{{titleSize}}">PITAKA Journal</h3>
      </div>
    
      <div class="{{gapClass}} md:grid-cols-3">
        {% assign articles =  blogs.news.articles | sort: 'id' | reverse %}
        {% for item in articles limit: 3 %}
          {% if forloop.last == true %}
            {% render 'grid-article-item', article: item, hiddenClass:'block sm:hidden md:block' %}
          {% else %}
            {% render 'grid-article-item', article: item %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  
 