      var max = parseInt($(this).data("max"));
      var min = parseInt($(this).data("min"));
      $(this).siblings('input').prop('disabled',false)
      if(quantity >= max){
        $(this).next('input').prop('disabled',true);
        $(this).val(max);
      }else if(quantity <= min){
        $(this).prev('input').prop('disabled',true);
        $(this).val(min);
      }
    })
  })
