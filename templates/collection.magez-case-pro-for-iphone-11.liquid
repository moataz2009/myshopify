  <style>
    .section0 .pt-section-content {
      width: 80%;
    }
  
    .section2 .pt-section-content {
      padding-right: 10%;
      width: 40%;
    }
  
    .section3.pt-flex-center {
      padding: 5em 5em 0 0;
      justify-content: flex-start;
    }
  
    .section4 {
      padding: 0 0 0 10%;
    }
  
    .section3 .pt-section-content {
      width: 45%;
      max-width: 478px;
    }
  
    .section4 .pt-section-content {
      width: 40%;
      max-width: 478px;
      transform: translateX(10vw);
    }
  
    .section3 .pt-section-picture {
      width: 55%;
      display: flex;
      align-items: flex-end;
    }
  
    @media screen and (max-width: 1600px) {
  
      .section1,
      .section2 {
        padding: 5em 5%;
      }
  
      .section3 .pt-section-content {
        width: 40%;
      }
  
      .section3 .pt-section-picture {
        width: 60%;
      }
    }
  
    @media screen and (max-width: 1280px) {
  
      .section1,
      .section2 {
        padding: 4em 10%;
      }
  
      .pt-section .pt-section-content {
        width: 50%;
      }
  
      .section4 .pt-section-content {
        width: 40%;
        margin-right: -10%;
      }
  
      .section4 .pt-section-picture {
        width: 70%;
      }
  
      .section2 .pt-section-content {
        width: 60%;
      }
    }
  
    @media screen and (min-width: 768px) {
      .pt-section1 {
        min-height: 45vw;
      }
    }
  
    @media screen and (max-width: 768px) {
      .section0 {
        padding-top: 5em;
      }
  
      .section0 .pt-section-content {
        top: 3em;
      }
  
      .section2 {
        flex-direction: column;
        text-align: center;
      }
  
      .section1 .pt-section-content,
      .section2 .pt-section-content {
        width: 100%;
        padding: 0;
        margin-bottom: 3em;
      }
  
      .section3.pt-flex-center {
        flex-direction: column-reverse;
        padding: 4em 0 0;
      }
  
      .section3 .pt-section-content {
        width: 100%;
        text-align: center;
        max-width: 100%;
        padding: 0 10%;
      }
  
      .section4 {
        flex-direction: column;
        padding: 0;
        position: relative;
      }
  
      .section4 .pt-section-content {
        position: absolute;
        left: 10%;
        top: 4em;
        transform: none;
        width: 50%;
      }
  
      .section3 .pt-section-picture,
      .section4 .pt-section-picture,
      .section3 .pt-section-picture img,
      .section4 .pt-section-picture img {
        width: 100%;
      }
    }
  
    @media screen and (max-width: 414px) {
  
      .section1,
      .section2 {
        padding: 3em 10%;
      }
  
      .section3.pt-flex-center {
        padding: 3em 0 0;
      }
  
      .section4 .pt-section-content {
        top: 3em;
        width: 60%;
      }
    }
  </style>
  
  <!-- media -->
  {{ 'collection-media-slide.css' | asset_url | stylesheet_tag }}
  <style>
    .section5 {
      padding-left: 0;
      padding-right: 0;
    }
  
    .product-media .m-content {
      height: 200px;
    }
  
    .product-media .content-item p {
      font-size: unset;
    }
  
    @media screen and (min-width: 1025px) {
      @supports (display: grid) {
  
        /* individual logo width setting */
        .media-logos li[data-id='i1'] {
          width: 70%;
        }
  
        .media-logos li[data-id='i9'] {
          width: 68%;
        }
  
        .media-logos li[data-id='i2'] {
          width: 125%;
        }
      }
    }
  
    @media screen and (max-width: 1024px) {
      .product-media {
        width: 100%;
      }
  
      .product-media .m-content {
        height: 250px;
        width: 1100% !important;
      }
  
      .product-media .m-content .content-item {
        width: 9.09%;
      }
  
      .thumb-ico.m-item.active {
        justify-content: center;
      }
  
      .product-media .arrowBox .arrow {
        top: calc(50% + 60px);
      }
  
      /* individual logo width setting */
      .product-media .logoBox .media-logos li.m-item[id='i1'] img {
        width: 70%;
      }
  
      .product-media .logoBox .media-logos li.m-item[id='i9'] img {
        width: 55%;
      }
    }
  
    @media screen and (max-width: 640px) {
      .product-media .m-content {
        height: 300px;
      }
  
      .product-media .media-logos {
        padding-bottom: 0;
      }
    }
  </style>
  
  {{ 'collection-media-slide.js' | asset_url | script_tag }}
  <script>
    $(document).ready(function () {
      $('.thumb-ico').click(function () {
        $(this).addClass('active').siblings().removeClass('active')
        var modid = $(this).data('id')
        $('#' + modid)
          .addClass('active')
          .siblings()
          .removeClass('active')
      })
    })
  </script>