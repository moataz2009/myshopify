<style>
  #anim-case {
    top: 4%;
    right: 0%;
  }
</style>

<script>
  $(function () {
    // init controller
    var controller = new ScrollMagic.Controller();

    // build tween
    var tween = TweenMax.to("#anim-case", 0.5, {
      x: -150,
      y: 40,
      ease: Linear.easeNone
    });
    if (window.innerWidth > 768) {
      var scene = new ScrollMagic.Scene({
          triggerElement: "#trigger_sec",
          duration: 300,
          onLeave: true,
        })
        .setTween(tween)
        .addTo(controller);

    } else {
      var scene = new ScrollMagic.Scene({
          triggerElement: "#trigger_line",
          duration: 300,
          onLeave: true,
        })
        .setTween(tween)
        .addTo(controller);
    }
  });
</script>


