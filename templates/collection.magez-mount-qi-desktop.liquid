<style>
  .swiper-top .swiper-button-prev:after {
    content: '';
    width: 50%;
    height: 50%;
    background: url({{'triggle_pixel.svg' | asset_url}}) no-repeat;
    background-size: contain;
  }

  .swiper-top .swiper-button-next:after {
    content: '';
    width: 50%;
    height: 50%;
    background: url({{'triggle_pixel.svg' | asset_url}}) no-repeat;
    background-size: contain;
  }

  .swiper-top .swiper-button-prev {
    transform: rotate(-180deg);
    left: 50px;
  }

  .swiper-top .swiper-button-next {
    right: 50px;
  }

  .swiper-top .swiper-pagination-bullets {
    display: flex;
    justify-content: center;
    margin: 0 -0.4rem;
  }

  .swiper-top .square-bullet {
    width: 8px;
    height: 8px;
    background-color: #565557;
    display: block;
    margin: 0 .4rem;
  }

  .swiper-top .swiper-pagination-bullet-active {
    background-color: #fff;
  }

  .swiper-top.swiper-container {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .swiper-top .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
  }

  @media screen and (max-width:768px) {
    .swiper-top .swiper-button-next {
      right: 12px;
    }

    .swiper-top .swiper-button-prev {
      left: 12px;
    }
  }

  @media screen and (max-width:414) {
    .swiper-top .swiper-button-next {
      right: 8px;
    }

    .swiper-top .swiper-button-prev {
      left: 8px;
    }
  }
</style>

