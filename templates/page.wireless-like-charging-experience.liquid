<div class="bg-gray-850">
  <div
    class="w-10/12 md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto {{ pdClass }} "
  >
    <h3 class="{{ titleSize }}  text-center mb-2"></h3>
    <h3 class="{{ titleSize }}  text-center"></h3>
    <div class="lg:w-2/5 md:w-9/12 sm:w-11/12 m-auto">
      <form id="share-form" class="mx-auto w-full relative">
        <input
          type="text"
          name="ip"
          class="form-control w-full bg-gray-800 hidden"
          id="ip"
        />
        <!-- <input
          type="text"
          name="datetime"
          class="form-control w-full bg-gray-800 hidden"
          id="date_time"
        /> -->
        <div class="form-group pt-4">
          <div class="form-group py-4">
            <label class="font-bold" for="name"
              ><span class="text-cyan">* </span>Full Name</label
            >
            <input
              type="text"
              name="name"
              class="form-control w-full bg-gray-800"
              required
              placeholder="Name"
            />
          </div>
          <div class="form-group py-4">
            <label class="font-bold" for="email"
              ><span class="text-cyan">* </span> Email
            </label>
            <input
              type="email"
              name="email"
              class="form-control w-full bg-gray-800"
              required
              placeholder="Email Address"
            />
          </div>
          <div class="form-group py-4">
            <label class="font-bold" for="country">Country</label><br />
            <input
              type="tel"
              name="country"
              class="form-control w-full bg-gray-800"
              placeholder="Enter Country"
            />
          </div>

          <div class="form-group py-4">
            <label class="font-bold" for="website"> Your Website</label>
            <input
              type="text"
              name="website"
              class="form-control w-full bg-gray-800"
              placeholder="URL"
            />
          </div>
          <div class="form-group py-4">
            <label class="font-bold" for="estimatedTime"
              >Estimated Time of Delivery</label
            >
            <input
              type="date"
              name="estimatedTime"
              class="form-control w-full bg-gray-800 flex-row-reverse justify-start"
              placeholder="Date"
            />
          </div>
          <div class="form-group py-4">
            <button
              type="submit"
              id="submit"
              class="btn btn-primary block mx-auto py-4"
            >
              <span class="hidden mr-3" id="loading">
                <svg
                  t="1645436787483"
                  class="icon animate-spin"
                  viewBox="0 0 1024 1024"
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  p-id="2938"
                  width="24"
                  height="24"
                >
                  <path
                    d="M512 170.666667v85.333333a256 256 0 1 1-223.573333 131.2L213.930667 345.6A341.333333 341.333333 0 1 0 512 170.666667z"
                    fill="#ffffff"
                    opacity=".3"
                    p-id="2939"
                  ></path>
                </svg>
              </span>
              Submit
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

