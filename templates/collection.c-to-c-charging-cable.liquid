{% assign product = all_products[collection.handle] %}
{% if product.id != '' %}
{% render 'buy-bar' , product: all_products[collection.handle]%}
{% endif %}

{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full md:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_b = 'px-3 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-28' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

{% assign absoluteContentBoxClass_8 = 'w-full laptop:w-10/12 lg:w-8/12 max-w-screen-xl mx-auto px-6 lg:px-0 h-full absolute transform left-1/2 -translate-x-1/2 top-0' %}
{% assign absoluteContentBoxClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto px-6 lg:px-0 h-full absolute transform left-1/2 -translate-x-1/2' %}
{% assign absoluteContentClass = 'text-center sm:text-left absolute transform w-4/5 sm:w-1/2 xl:w-3/8 top-16 left-1/2 -translate-x-1/2  max-w-md sm:translate-x-0 sm:left-6 lg:left-0 sm:top-1/2 sm:-translate-y-1/2' %}

<div class="relative ">
  <div class="absolute w-full h-full pt-12 sm:pt-0">
    <div
      class="w-10/12 lg:w-9/12 h-full mx-auto flex justify-center sm:justify-end sm:items-center text-center sm:text-left">
      <div class="max-w-md">
        <h3 class="{{titleSize}} mb-6">
          Charge and Sync Your Devices
        </h3>
        <p class="{{descSize}}">
          Charge and transfer data with USB 2.0 (480 Mbps) transfer speeds to and from your smartphone, tablet, or laptop.
        </p>
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'product-section1-data-cable.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'product-section1-data-cable-m.jpg' | asset_url}}"
      alt="c-to-c" class="block w-full h-full object-cover lazyload"> 
  </picture>
</div>

<div class="w-full relative ">
  <div class="absolute {{absoluteContentBoxClass_8}}">
    <div class="{{absoluteContentClass}} absolute">
      <h3 class="{{titleSize}} mb-6">
        60W Power Delivery
      </h3>
      <p class="{{descSize}}">
        Specially engineered to fast charge your devices.
      </p>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'product-section2-data-cable.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'product-section2-data-cable-m.jpg' | asset_url}}"
      alt="c to c" class="block w-full h-full object-cover lazyload">
  </picture>
</div>

<div class="relative">
  <div class="absolute w-full h-full pt-12 sm:pt-0">
    <div
      class="w-10/12 lg:w-9/12 h-full mx-auto flex justify-center sm:justify-end sm:items-center text-center sm:text-left">
      <div class="max-w-md">
        <h3 class="{{titleSize}} mb-6">
          Strengthened Connectors
        </h3>
        <p class="{{descSize}}">
          Robust tin-plated connectors reduce fraying cables and breaks, offering reliable cable usage and longevity.
        </p>
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'product-section3-data-cable.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'product-section3-data-cable-m.jpg' | asset_url}}"
      alt="c-to-c" class="block w-full h-full object-cover lazyload"> 
  </picture>
</div>

<div class="w-full relative ">
  <div class="absolute {{absoluteContentBoxClass_8}}">
    <div class="text-center sm:text-left absolute transform w-4/5 sm:w-1/2 xl:w-3/8 top-64 xs:top-3/4 sm:bottom-none left-1/2 -translate-x-1/2  max-w-md  sm:translate-x-0 sm:left-6 lg:left-0 sm:top-1/2 sm:-translate-y-1/2 absolute">
      <h3 class="{{titleSize}} mb-6">
        Reinforced for Durability
      </h3>
      <p class="{{descSize}}">
        Toughened over several layers of flexible rubber and protective gauze, the PITAKA USB C cable is successfully
        bend-tested over 6000 times on pressure-points that on other cables weaken quickly, ensuring long-lasting,
        everyday use.
      </p>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'product-section4-data-cable.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'product-section4-data-cable-m.jpg' | asset_url}}"
      alt="c to c" class="block w-full h-full object-cover lazyload">
  </picture>
</div>

<div class="w-full">
  <picture>
    <source data-srcset="{{'product-section5-data-cable.jpg' | asset_url}}" media="(min-width: 768px)">
