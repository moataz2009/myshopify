{% render 'buy-bar', product: all_products[collection.handle] %}

{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full md:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_t = 'px-3 sm:px-6 md:px-0 pt-12 sm:pt-16 lg:pt-20' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

{% assign altName = 'Air Case for Samsung Galaxy S22 Series' %}

{% assign absoluteContentBoxClass = 'w-full laptop:w-10/12 max-w-screen-xl mx-auto px-6 lg:px-0 h-full absolute transform left-1/2 -translate-x-1/2 top-0' %}
{% assign absoluteContentClass = 'text-center lg:text-left absolute transform w-11/12 lg:w-3/5 xl:w-3/8 top-16 left-1/2 -translate-x-1/2 max-w-md lg:translate-x-0 lg:left-0 lg:top-1/2 lg:-translate-y-1/2' %}
{%- comment -%}首屏banner{%- endcomment -%}
<div class="w-full relative">
  <div class="absolute {{absoluteContentBoxClass}}">
    <div class="{{absoluteContentClass}} absolute">
      <!-- <h1 class="text-xl md:text-2xl font-normal mb-2">Fusion Weaving for <br>
        Samsung Phones</h1> -->
      <h3 class="{{titleSize}} text-black">
        Thin, Light and Sexy.
      </h3>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'aircase-s22-section1.webp' | asset_url}}" media="(min-width: 1280px)">
    <source data-srcset="{{'aircase-s22-section1-m.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section1-s.webp' | asset_url}}" alt="{{altName}}"
      class="block w-full h-full object-cover lazyload">
  </picture>
</div>
{%- comment -%}第3屏字居右图底{%- endcomment -%}
<div class="relative w-full section3">
  <div class="{{wClass_8}} px-6 h-full absolute left-1/2 transform -translate-x-1/2 flex justify-end sm:items-center">
    <div class="w-full sm:w-2/5 lg:w-3/10 xl:w-1/4 pt-20 sm:p-0 text-center sm:text-left">
      <h3 class="{{titleSize}} text-center sm:text-left">
        Super-Slim & <br class="hidden lg:block">
        Lightweight.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}} mx-auto sm:ml-0">
      <p class="text-sm sm:text-base  text-center sm:text-left">
        Show off the curves and lines of your S22 with the minimalist cover.
      </p>
      <div class="flex justify-center items-end sm:justify-start mt-8 lg:mt-12">
        <img src="{{ 'case-thick-55mm.png' | asset_url }}"
          class="block xl:mr-8 transform origin-top sm:origin-top-left scale-75 sm:scale-80 xl:scale-100">
        <img src="{{ 'case-weight-106g.png' | asset_url }}"
          class="block transform origin-top sm:origin-top-left scale-75 sm:scale-80 xl:scale-100">
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'aircase-s22-section3.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section3-s.webp' | asset_url}}" alt="{{altName}}"
      class="block w-full object-cover lazyload">
  </picture>
</div>
{%- comment -%}第4屏左图右字{%- endcomment -%}
<div class="bg-gray-850 {{pdClass}}">
  <div class="{{wClass}} flex flex-col sm:flex-row-reverse items-center justify-between">
    <div class="w-full sm:w-5/12 md:w-1/3">
      <h3 class="{{titleSize}}">
        Wireless Charging Friendly.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}} max-w-sm">
        The slim case allows you to wireless charge your S22 phone on any Qi-enabled device.
      </p>
    </div>
    <div class="w-full mt-12 sm:mt-0 sm:w-4/8 lg:w-3/5">
      <picture>
        <source data-srcset="{{'aircase-s22-section4.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section4-s.webp' | asset_url}}" alt="{{altName}}"
          class="block w-full lazyload">
      </picture>
    </div>
  </div>
</div>
{%- comment -%}第5屏左字右图{%- endcomment -%}
<div class="bg-gray-850 {{pdClass}} -mt-16 sm:-mt-20 lg:-mt-28">
  <div class="{{wClass}} flex flex-col sm:flex-row items-center justify-between">
    <div class="w-full sm:w-5/12 md:w-1/3">
      <h3 class="{{titleSize}}">
        Durable, Delicate Material.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        Experience luxury at your fingertips with this minimalistic case crafted from delicately woven 600D aramid fiber
        reserved only for our premium products.
      </p>
    </div>
    <div class="w-full mt-12 sm:mt-0 sm:w-4/8 lg:w-3/5">
      <picture>
        <source data-srcset="{{'aircase-s22-section5.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section5-s.webp' | asset_url}}" alt="{{altName}}"
          class="block w-full lazyload">
      </picture>
    </div>
  </div>
</div>
{%- comment -%}第6屏左图右字{%- endcomment -%}
<div class="bg-gray-800 {{pdClass}}">
  <div class="{{wClass}} flex flex-col sm:flex-row-reverse items-center justify-between">
    <div class="w-full sm:w-5/12 md:w-1/3">
      <h3 class="{{titleSize}}">
        Better Grip with More Comfort.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}} max-w-sm">
        Our unique vacuum forming process, 3D Grip Technology, creates a granular non-slip luxurious texture for
        exceptional grip and comfort.
      </p>
    </div>
    <div class="w-full mt-12 sm:mt-0 sm:w-4/8 lg:w-3/5">
      <picture>
        <source data-srcset="{{'aircase-s22-section6.webp' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section6-s.webp' | asset_url}}" alt="{{altName}}"
          class="block w-full lazyload">
      </picture>
    </div>
  </div>
</div>

<div class="{{wClass_8}} {{pdClass}}  flex flex-col sm:flex-row items-center justify-between">
  <div class="w-full px-3 sm:px-0 sm:w-2/5 mb-16 sm:mb-0">
    <h3 class="{{titleSize}}">
      Precision Cut Design.
    </h3>
    <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
    <p class="{{descSize}}">
      Cut with exceptional accuracy for flawless coverage and effortless access to your phone's features.
    </p>
  </div>
  <div class="w-full sm:w-1/2">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section7.webp' | asset_url}}" alt="{{altName}}"
      class="block w-full h-full object-cover lazyload">
  </div>
</div>

{%- comment -%}第8屏四格图{%- endcomment -%}
<div class="w-full  -mt-16 sm:-mt-20 lg:-mt-28">
  <div class="{{wClass}} {{pdClass}}">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 md:gap-6 sm:auto-rows-fr">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section8-1.webp' | asset_url}}" alt="{{altName}}"
        class="block w-full h-full object-cover lazyload">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section8-2.webp' | asset_url}}" alt="{{altName}}"
        class="block w-full h-full object-cover lazyload">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section8-3.webp' | asset_url}}" alt="{{altName}}"
        class="block w-full h-full object-cover lazyload">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-s22-section8-4.webp' | asset_url}}" alt="{{altName}}"
        class="block w-full h-full object-cover lazyload">
    </div>
  </div>
</div>

<style>
  .section3>picture img {
    min-height: 460px;
  }
</style>