{{ 'product-case-detail.css' | asset_url | stylesheet_tag }}
<style>
  .case-animation {
    max-height: 720px;
  }

  .section1 .pt-section-content {
    position: relative;
    z-index: 10;
  }
</style>
{% if base_type == 'galaxy' or base_name == 'oneplus8' 
    or base_name == 'iphone11' %}
<style>
  .section1 {
    padding: 0;
  }

  .section1 .pt-section-content {
    position: absolute;
    top: 5em;
  }
</style>
{% endif %}

{% if base_name == 'note10' %}
<style>
  .section6 {
    flex-direction: row-reverse;
    padding-left: 0;
    padding-right: 10%;
  }

  .section6 .pt-section-content { 
    text-align: left;
  }

  .section6 .pt-section-picture {
    justify-content: flex-start;
  }

  @media screen and (max-width:768px) {
    .section6 {
      flex-direction: column;
      padding: 3em 0;
    }

    .section6 .pt-section-content {
      text-align: center;
    }
  }
</style>
{% endif %}

{% unless base_type == 'galaxy' and base_name == 'oneplus8' %}
<script>
  $(function () {
    var $win = $(window);
    if ($('.case-animation').length) {
      var whc = $('.case-animation').height();
      $(document).scroll(casePartsHandler);
      $win.resize(casePartsHandler);

      function casePartsHandler() {
        var cswrpheight = ($('.case-animation').offset().top - $win.scrollTop()) * 3;
        if (window.innerWidth < 600)
          if (cswrpheight > 450) cswrpheight = 450;
        if (window.innerWidth > 601 && window.innerWidth < 800)
          if (cswrpheight > 600) cswrpheight = 600;
        if (window.innerWidth > 801 && window.innerWidth < 1024)
          if (cswrpheight > 600) cswrpheight = 600;
        $(".case-animation").css('height', cswrpheight);
      }
    }
  });
</script>
{% endunless %}