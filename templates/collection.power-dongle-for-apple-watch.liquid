{% render 'buy-bar', product: all_products[collection.handle] %}

{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full md:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_b = 'px-3 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-28' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

{% assign absoluteContentBoxClass = 'w-full sm:w-11/12 md:w-10/12 lg:w-9/12 xl:w-8/12 max-w-screen-xl mx-auto px-6 lg:px-0 transform sm:left-1/2 sm:-translate-x-1/2' %}
{% assign absoluteContentClass = 'transform w-full pr-10 md:pl-0 md:w-1/2 xl:w-3/8 max-w-md bottom-8 md:bottom-1/2 md:translate-y-1/2' %}

<div class="relative section-hero">
  <div class="{{wClass_8}} md:h-full flex justify-end items-stretch">
    <div class="w-full sm:w-7/8 md:w-3/5 xl:w-3/4 xl:pl-24 mix-blend-luminosity">
      <video muted autoplay playsinline webkit-playsinline x5-video-player-type="h5" x5-video-player-fullscreen="true"
        x5-video-orientation="portraint" class="w-full md:h-full block object-cover object-center">
        <source src="{{ 'dongle-apple-watch-section1-v.mp4' | asset_url }}" type="video/mp4" />
        <source src="{{ 'dongle-apple-watch-section1-v.webm' | asset_url }}" type="video/webm" />
      </video>
    </div>
  </div>
  <div class="absolute {{absoluteContentBoxClass}} md:h-full bottom-7 md:bottom-0 z-10">
    <div class="absolute {{absoluteContentClass}}">
      <h1 class="{{titleSize}} mb-4">
        Power Dongle<br>
        for Apple Watch
      </h1>
      <p class="{{descSize}} mb-8">
        An MFi-certified wireless charging dongle for all Apple Watch models with a magnetic lid.
      </p>
      {{'dongle-apple-watch-section1-icon.svg' | asset_url | img_tag:'Power Dongle for Apple Watch','block w-1/3' }}
    </div>
  </div>
</div>

<div class="w-full relative section2">
  <div
    class="absolute w-full px-6 md:px-0 py-16 md:py-20 sm:w-3/4 md:w-3/5 xl:w-2/5 text-center top-0 left-1/2 transform -translate-x-1/2">
    <h3 class="{{titleSize}}">
      MFi-Certified Magnetic<br>
      Wireless Charger
    </h3>
    <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}} mx-auto">
    <p class="text-sm sm:text-base">
      Experience secure magnetic wireless charging for your Apple Watch.
    </p>
  </div>
  <picture>
    <source data-srcset="{{'dongle-apple-watch-section2.jpg' | asset_url}}" media="(min-width: 1281px)">
    <source data-srcset="{{'dongle-apple-watch-section2-m.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section2-s.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lg:h-full lg:object-cover object-center lazyload">
  </picture>
</div>

<div class="{{wClass}} {{pdClass}}">
  <div class="{{titleBoxClass}} text-center">
    <h3 class="{{titleSize}}">
      Lightweight and Portable,<br class="hidden sm:block">
      with a Minimalistic Design
    </h3>
  </div>
  {% assign descs = 'View the clean inner workings of the cable-less Power Dongle with its unique transparent design. | Never lose the dongle cover with handy built-in magnets. Attach the cap to the end of the charger while you power up. | Ultra-lightweight and compact making it convenient to carry in your pocket or in a bag.' %}
  {% render 'center-slides', name:'Power Dongle for Apple Watch', picName: 'slider-dongle-apple-watch', sliderDescs:descs %}
</div>

<div class="w-full section4 relative bg-gray-800 sm:bg-transparent px-3 pb-8 sm:p-0">
  <div class="static sm:absolute w-full h-full py-12 sm:py-0">
    <div class="w-full  sm:w-10/12 lg:w-8/12 sm:h-full mx-auto flex sm:justify-end sm:items-center">
      <div class="w-full sm:w-1/2 md:w-2/5 xl:w-1/3 max-w-md">
        <h3 class="{{titleSize}}">
          Works Perfectly<br>With MagEZ Slider
        </h3>
        <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
        <p class="text-sm sm:text-base mb-8 sm:mb-12">
          Use the MagEZ Sliderâ€™s USB-C port to conveniently charge your Apple Watch on your desktop, or charge on the go
          with any powered USB-C port.
        </p>
        {% render 'link-button',link_url:'/collections/magez-slider-sign-up', link_title:'Click to view MagEZ Slider'%}
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'dongle-apple-watch-section4.jpg' | asset_url}}" media="(min-width: 1281px)">
    <source data-srcset="{{'dongle-apple-watch-section4-m.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section4-s.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lazyload">
  </picture>
</div>

<div class="{{wClass}} {{pdClass}}">
  <div class="grid gap-3 sm:gap-6 grid-cols-1 md:grid-cols-2">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section5-1.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lazyload">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section5-2.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lazyload">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section5-3.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lazyload">
    <img src="{{ placeholder_gif }}" data-src="{{'dongle-apple-watch-section5-4.jpg' | asset_url}}"
      alt="Power Dongle for Apple Watch" class="block w-full lazyload">
  </div>
</div>

<style>
  .section-hero {
    background-color: rgb(27,31,35);
    height: calc(100vh - 120px);
  }

  .section2 {
    height: 768px;
  }

  @media screen and (min-width:1921px) {
    .section2 {
      height: auto;
    }
  }

  @media screen and (max-width:1280px) {
    .section2 {
      height: auto;
    }
  }
</style>
