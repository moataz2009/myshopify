{% render 'buy-bar', product: all_products[collection.handle] %}

{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full md:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_b = 'px-3 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-28' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

{% assign absoluteContentBoxClass_8 = 'w-full laptop:w-10/12 lg:w-8/12 max-w-screen-xl mx-auto px-6 lg:px-0 h-full absolute transform left-1/2 -translate-x-1/2 top-0' %}
{% assign absoluteContentBoxClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto px-6 lg:px-0 h-full absolute transform left-1/2 -translate-x-1/2' %}
{% assign absoluteContentClass = 'text-center sm:text-left absolute transform w-4/5 sm:w-1/2 xl:w-3/8 top-16 left-1/2 -translate-x-1/2  max-w-md sm:translate-x-0 sm:left-6 lg:left-0 sm:top-1/2 sm:-translate-y-1/2' %}

<div class="w-full relative overflow-hidden section-hero">
  <div class="absolute {{absoluteContentBoxClass_8}}">
    <div class="{{absoluteContentClass}} absolute">
      <h3 class="text-xl md:text-2xl font-bold md:leading-normal text-center sm:text-left">
        A slim, ultra-lightweight case crafted from luxuriously smooth-textured 600D aramid fiber.
      </h3>
    </div>
    <div
      class="absolute w-full h-full transform translate-y-20 sm:translate-y-0 sm:w-1/3 sm:right-6 md:right-0 bottom-0 flex flex-col justify-end">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section1-phone.png' | asset_url}}"
        alt="Air Case for iPhone 13 Series"
        class="block lazyload h-1/2 sm:h-3/5 max-w-xs object-contain float-case self-center sm:self-start">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section1-shadow.png' | asset_url}}"
        alt="Air Case for iPhone 13 Series"
        class="lazyload opacity-80 h-1/3 sm:opacity-90 xl:opacity-100 sm:mt-0 sm:opacity-100 lg:h-1/4 object-contain float-shadow self-end">
    </div>
  </div>
  <picture>
    <source data-srcset="{{'aircase-i13-section1-bg.jpg' | asset_url}}" media="(min-width: 1280px)">
    <source data-srcset="{{'aircase-i13-section1-bg-m.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section1-bg-s.jpg' | asset_url}}"
      alt="Air Case for iPhone 13 Series" class="block w-full h-full object-cover lazyload">
  </picture>
</div>

<div class="{{wClass_8}} {{pdClass}}">
  {% render 'video-set' , name:'product-video-aircase-i13', extraClass:'bg-black' %}
  {%- comment -%}
  <div id="trigger-video"></div>
  <div class="w-full relative bg-black">
    <div class="pt-section-picture relative">
      <div class="absolute left-0 top-0 transform w-full h-full flex justify-center items-center">
        <div data-target="#modal-video" id="play-btn"
          class="rounded-full w-9 h-9 bg-white flex justify-center items-center cursor-pointer">
          {{ 'triggle_pixel-black.svg' | asset_url | img_tag:'','block' }}
        </div>
      </div>
      <picture>
        <img src="{{ placeholder_gif }}" data-src="{{ 'product-video-aircase-i13-cover.jpg' | asset_url }}"
          class="block w-full lazyload" />
      </picture>
    </div>
    <div id="modal-video" class="modal-container absolute w-full h-full opacity-0 inset-0 transition">
      <video muted loop controls playsinline webkit-playsinline x5-video-player-type="h5"
        x5-video-player-fullscreen="true" x5-video-orientation="portraint" class="w-full h-full block object-cover">
        <source src="{{ 'product-video-aircase-i13.mp4' | asset_url }}" type="video/mp4" />
        <source src="{{ 'product-video-aircase-i13.webm' | asset_url }}" type="video/webm" />
      </video>
    </div>
  </div>
  {%- endcomment -%}
</div>

<div class="w-full">
  <div class="{{titleBoxClass}}">
    <h3 class="{{titleSize}}">
      Lightweight and Ultra-thin
    </h3>
    <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
    <p class="{{descSize}}">
      Weighing just 7.1g (mini), with a thickness of only 0.55mm, Air Case is precision cut to maintain the
      slim design of your iPhone 13 and allow access to buttons, switches, and the charging port.
    </p>
  </div>

  <div class="relative w-full">
    <picture>
      <source data-srcset="{{'aircase-i13-section3.jpg' | asset_url}}" media="(min-width: 1025px)">
      <source data-srcset="{{'aircase-i13-section3-m.jpg' | asset_url}}" media="(min-width: 768px)">
      <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section3-s.jpg' | asset_url}}"
        alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
    </picture>
    <div class="absolute transform left-1/2 top-1/2 pt-4 -translate-x-1/2 flex justify-center items-stretch">
      <img src="{{ 'case-thick-55mm.png' | asset_url }}"
        class="block sm:mx-8 transform scale-75 sm:scale-90 laptop:scale-100">
      <img src="{{ 'case-weight-106g.png' | asset_url }}"
        class="block sm:mx-8 transform scale-75 sm:scale-90 laptop:scale-100">
    </div>
  </div>
</div>

<div class="w-full {{pdClass}}">
  <div class="{{wClass_8}} flex flex-col sm:flex-row items-center justify-between">
    <div class="w-full sm:w-1/2 md:w-3/8 pb-16 sm:pb-0">
      <h3 class="{{titleSize}}">
        Luxury and Minimalism Combined
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        Experience luxury at your fingertips with this minimalistic case crafted from delicately woven
        <a class="text-cyan" href="javascript:;" id="open600D">600D</a>
        aramid fiber reserved only for our premium products.
      </p>
    </div>

    <div class="w-full sm:w-1/2 sm:pl-12 md:pl-0">
      <picture>
        <source data-srcset="{{'aircase-i13-section4.jpg' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section4-s.jpg' | asset_url}}"
          alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
      </picture>
    </div>
  </div>
</div>

<div class="w-full hidden bg-gray-750 {{pdClass}}" id="600D">
  <div class="{{wClass_8}} flex flex-col sm:flex-row items-center justify-between">
    <div class="w-full sm:w-1/2 md:w-3/8 pb-16 sm:pb-0">
      <h3 class="{{titleSize}}">
        What is 600D?
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        600D is extremely rare challenging to produce, so we only use it to create our premium products. Since the weave
        of 600D is more delicate, the results are even more impressive, resulting in a lighter, softer, and even more
        unique product.
      </p>
    </div>

    <div class="w-full sm:w-1/2 sm:pl-12 md:pl-0">
      <picture>
        <source data-srcset="{{'aircase-i13-section4-expand.jpg' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section4-expand-s.jpg' | asset_url}}"
          alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
      </picture>
    </div>
  </div>
  <div class="{{wClass_8}} flex justify-end mt-6">
    <a class="text-cyan" href="javascript:;" id="close600D">Close 600D</a>
  </div>
</div>

<div class="bg-gray-800 pt-16 sm:pt-0 pb-16 sm:pb-20 lg:pb-24 px-6 md:px-0">
  <div class="{{wClass_6}} flex flex-col-reverse sm:flex-row items-center justify-between">
    <div class="w-full sm:w-3/6">
      <picture>
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section5.png' | asset_url}}"
          alt="Air Case for iPhone 13 Series"
          class="block mx-auto w-4/5 sm:w-full transform translate-y-16 sm:translate-y-20 lg:translate-y-24 lazyload">
      </picture>
    </div>

    <div class="w-full sm:w-3/6 sm:px-6">
      <h3 class="{{titleSize}}">
        Better Grip with<br>
        More Comfort
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        Our unique vacuum forming process creates a granular nonslip luxurious
        texture for exceptional grip and comfort.
      </p>
    </div>

  </div>
</div>

<div class="w-full {{pdClass}}">
  <div class="{{wClass_8}} flex flex-col sm:flex-row items-center justify-between">
    <div class="w-full sm:w-1/2 md:w-3/8 pb-16 sm:pb-0">
      <h3 class="{{titleSize}}">
        Built-in Camera Protection
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        A durable raised camera surround protects your lenses from scratching.
      </p>
    </div>

    <div class="w-full sm:w-1/2 sm:pl-12 md:pl-0">
      <picture>
        <source data-srcset="{{'aircase-i13-section6.jpg' | asset_url}}" media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section6-s.jpg' | asset_url}}"
          alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
      </picture>
    </div>
  </div>
</div>

<div class="{{wClass}} px-0 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-24">
  <picture>
    <source data-srcset="{{'aircase-i13-section8.jpg' | asset_url}}" media="(min-width: 1025px)">
    <source data-srcset="{{'aircase-i13-section8-m.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section8-s.jpg' | asset_url}}"
      alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
  </picture>
  <div class="h-6 xl:h-8"></div>
  <picture>
    <source data-srcset="{{'aircase-i13-section7.jpg' | asset_url}}" media="(min-width: 1025px)">
    <source data-srcset="{{'aircase-i13-section7-m.jpg' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'aircase-i13-section7-s.jpg' | asset_url}}"
      alt="Air Case for iPhone 13 Series" class="block w-full lazyload">
  </picture>
</div>

<style>
  .section-hero {
    min-height: 37.5vw;
  }

  .float-case {
    z-index: 3;
    animation: case 3s ease-in-out infinite alternate;
  }

  .float-shadow {
    z-index: 2;
    animation: shadow 3s ease-in-out infinite alternate;
  }

  @keyframes case {
    from {
      transform: translate(0, 0)
    }

    to {
      transform: translate(0, 25px)
    }
  }

  @keyframes shadow {
    from {
      transform: translate(0, 20px)
    }

    to {
      transform: translate(0, 0)
    }
  }
</style>

{{'jquery.scrollTo.min.js' | asset_url | script_tag }}
<script>
  $(document).ready(function () {
    $("#open600D").on('click', function () {
      $("#600D").slideDown();
      $(window).scrollTo($("#600D"), 800);
    });
    $("#close600D").on('click', function () {
      $("#600D").slideUp();
      $(window).scrollTo($("#600D"), 500);
    });
  })
</script>