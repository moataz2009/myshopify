<style>
  .swiper-slide>div{
    display:none;
  }
  .swiper-slide.swiper-slide-active>div{
    display: block;
  }
  .swiper-slide.swiper-slide-active:hover>div>p{
    display: block;
  }
  .multiple-slider .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    /* transform: scale(0.9); */
    }
    /* .multiple-slider .swiper-slide.swiper-slide-next,
    .multiple-slider .swiper-slide.swiper-slide-duplicate-next{
      transform: scale(1);
	} */
  .multiple-slider>div[role="button"],
  .gallery-top>div[role="button"]{
    width: 12px;
    height: 16px;
  }

  .multiple-slider>div[role="button"]:after,
  .gallery-top>div[role="button"]:after{
    content: '';
    width: 100%;
    height: 100%;
    background: url({{'triggle_pixel.svg' | asset_url}}) no-repeat;
    background-size: contain;
  }

  .gallery-top .swiper-button-prev {
    transform: rotate(-180deg);
    left: 0;
  }
  .gallery-top .swiper-button-next {
    right: 0;
  }

  .multiple-slider .swiper-button-next {
    right: calc(50% - 450px);
  }

  .multiple-slider .swiper-button-prev {
    left: calc(50% - 450px);
    transform: rotate(-180deg);
  }

  .multiple-slider .swiper-pagination-bullets {
    display: none;
  }

  .multiple-slider .square-bullet {
    width: 8px;
    height: 8px;
    background-color: #565557;
    display: block;
    margin: 0 .4rem;
  }

  .multiple-slider .swiper-pagination-bullet-active {
    background-color: #fff;
  }
  @media screen and (max-width:768px) {
    .multiple-slider .swiper-button-next {
    right: calc(50% - 300px);
  }

  .multiple-slider .swiper-button-prev {
    left: calc(50% - 300px);
    transform: rotate(-180deg);
  }
  }
  @media screen and (min-width:768px) {
    .multiple-slider {
      padding-bottom: 4rem;
    }
    .multiple-slider .swiper-button-next,
    .multiple-slider .swiper-button-prev {
      top: 40%; 
      bottom: 6px;
      margin: 0;
    }
    .multiple-slider .swiper-pagination-bullets{
      display: flex;
      justify-content: center;
      margin: 0 -0.4rem;
    }
    .swiper-slide {height: 560px !important; margin-top: 16px;}
    .swiper-slide img {height: 560px !important; margin-top: 0px;}

    .swiper-slide.swiper-slide-active {width: 948px !important;height:593px !important;margin-top: 0px;}
    .swiper-slide.swiper-slide-active img {width: 948px !important;height:593px !important;margin-top: 0px;}

</style>

<script>
  var swiper = new Swiper('.multiple-slider', {
    loop:true,
    slidesPerView: 1,
    spaceBetween: 24,
    slidesOffsetBefore :0,
    breakpoints: { 
      769: {
        slidesPerView:1,
        slidesOffsetBefore : 0, 
      },
      1020: {
        slidesPerView: 3,
        slidesOffsetBefore : 12
      },
