<!-- anim-pictures -->
<style>
  .swiper-slide h3 {
    display: none;
  }

  .swiper-slide-active h3 {
    display: block
  }

  .pt-anim-container {
    justify-content: space-around;
    flex-shrink: 0;
  }

  .pt-anim-item {
    top: 92px;
    right: 96px;
  }

  #anim-item-1 {
    top: 180px;
  }

  .pt-anim-pictures {
    width: 393px;
    margin: 0 2em;
    flex-shrink: 0;
  }

  .pt-anim-pictures img {
    display: block;
  }

  @media screen and (min-width:1960px) {
    .pt-anim-content {
      min-width: 439px;
      transform: translateX(-25px);
    }
  }

  @media screen and (max-width:1280px) {
    .pt-anim-container {
      transform: scale(0.8);
    }

    .pt-anim-content {
      font-size: 120%;
    }
  }

  @media screen and (max-width:1024px) {
    .pt-anim-container {
      width: 100%;
    }
  }

  @media screen and (max-width:767px) {
    .pt-anim-container {
      flex-direction: column;
      align-items: center;
      transform: scale(0.9);
      margin-bottom: 0;
    }

    .pt-anim-pictures {
      margin: 5em 0 0;
    }

    .pt-anim-content {
      max-width: 100vw;
      margin: 0 auto;
      min-width: unset;
      transform: none;
    }

    .pt-anim-container+.pt-margin-top-large {
      margin-top: 0;
    }

    #anim-item-1 {
      top: 162px;
      right: -8px
    }

    .pt-anim-pictures>img {
      width: 145px;
    }

    #anim-item-1>img {
      width: 123px;
    }
  }

  @media screen and (max-width:414px) {
    .pt-anim-content {
      min-width: unset;
      transform: none;
      font-size: 120%;
      padding: 0 1em;
    }

    .pt-anim-container {
      transform: scale(0.8);
      margin-bottom: -30%;
      margin-top: calc(-30% - 3em);
    }
  }
</style>
<script>
  $(function () {
    // init controller
    var controller = new ScrollMagic.Controller();
    // build tween
    var tween_1 = TweenMax.to("#anim-item-1", 0.5, {
      x: -125,
      y: 10,
      ease: Linear.easeNone
    });
    if (window.innerWidth > 768) {
      // build scene
      var scene_1 = new ScrollMagic.Scene({
          triggerElement: "#trigger_sec-sleeve",
          duration: 300,
          onLeave: true,
        })
        .setTween(tween_1)
        .addTo(controller);
    } else {
      // build scene
      var scene_1 = new ScrollMagic.Scene({
          triggerElement: "#trigger_line_1-sleeve",
          duration: 300,
          onLeave: true,
        })
        .setTween(tween_1)
        .addTo(controller);
    }
  });
</script>