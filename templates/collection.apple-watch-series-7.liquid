{% assign product = all_products[collection.handle] %}
{% if product.id != '' %}
{% render 'buy-bar' , product: all_products[collection.handle]%}
{% endif %}
{% assign wClass = 'w-full md:w-11/12 lg:w-10/12 max-w-screen-xl mx-auto' %}
{% assign wClass_8 = 'w-full md:w-11/12 lg:w-10/12 xl:w-8/12 max-w-screen-xl mx-auto' %}
{% assign wClass_6 = 'w-full sm:w-10/12 lg:w-8/12 xl:w-6/12 max-w-screen-xl mx-auto' %}
{% assign pdClass = 'px-3 sm:px-6 md:px-0 py-16 sm:py-20 lg:py-28' %}
{% assign pdClass_b = 'px-3 sm:px-6 md:px-0 pb-16 sm:pb-20 lg:pb-28' %}
{% assign titleBoxClass= 'mx-auto mb-12 w-11/12 sm:w-5/6 md:w-2/3 xl:w-2/5' %}
{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6' %}

<div class="relative section-hero">
  <div class="absolute w-full h-full pt-12 sm:pt-0">
    <div
      class="w-full sm:w-11/12 lg:w-10/12 xl:w-8/12  max-w-screen-xl   h-full mx-auto flex justify-center sm:justify-start sm:items-center text-center sm:text-left">
      <div class="w-11/12 sm:w-4/8">
        <p class="text-2xl md:text-3xl}">
          Air Case for
        </p>
        <h1 class="{{titleSize}} lg:text-4xl mb-4">Apple Watch Series 7</h1>
        <p class="text-sm sm:text-base text-gray-400">
          Up Your Wrist Game with This Minimalist Aramid Fiber Case.
        </p>
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'collection-apple-watch-series-7-section1.webp' | asset_url}}" media="(min-width: 1281px)">
    <source data-srcset="{{'collection-apple-watch-series-7-section1-m.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section1-s.webp' | asset_url}}"
      alt="Apple Watch Series 7" class="block w-full lazyload">
  </picture>
</div>

<div class="w-full bg-gray-800">
  <div class="{{wClass_8}} {{pdClass}} text-center">
    <h3 class="{{titleSize}}">
      Premium Aramid Fiber.
    </h3>
    <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}} mx-auto">
    <p class="{{descSize}}  max-w-xl mx-auto">
      The PITAKA Air Case for Apple Watch is made using premium aerospace-grade aramid fiber that is lightweight,
      scratch-resistant, and highly durable.
    </p>
    <div class="{{titleDecoMy}}"></div>
    <picture>
      <source data-srcset="{{'collection-apple-watch-series-7-section2.webp' | asset_url}}" media="(min-width: 1281px)">
      <source data-srcset="{{'collection-apple-watch-series-7-section2-m.webp' | asset_url}}" media="(min-width: 768px)">
      <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section2-s.webp' | asset_url}}"
        alt="Apple Watch Series 7" class="block w-full lazyload">
    </picture>
  </div>
</div>

<div class="w-full bg-gray-850">
  <div class="{{wClass_8}} px-3 pt-16 sm:py-0 flex flex-col-reverse  sm:flex-row sm:justify-between sm:items-center  min-h-768">
    <div class="w-8/12 mx-auto sm:w-4/12">
      <picture>
        <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section3.webp' | asset_url}}"
          alt="MagEZ Car Mount Lite" class="lg:ml-12 xl:ml-16  block w-full lazyload">
      </picture>
    </div>
    <div class="mb-12 sm:mb-0 w-11/12 sm:w-3/8 text-left ">
      <h3 class="{{titleSize}}">
        Precision Crafted.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        Designed to accentuate the shape and form of your Apple Watch, the smartwatch casing offers easy access to
        buttons while maintaining its sleek, minimalist aesthetic.
      </p>
    </div>
  </div>
</div>


<div class="w-full bg-gray-800">
  <div class="{{wClass}}  {{pdClass}}  flex flex-col sm:flex-row sm:justify-between sm:items-center  min-h-768">
    <div class="mb-6 sm:mb-0 w-11/12 sm:w-4/12 text-left ">
      <h3 class="{{titleSize}}">
        Exclusive Luxury.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        600D aramid fiber's delicate weave makes it difficult to produce and is reserved exclusively for PITAKA's
        premium luxury products. 600D has an extremely smooth-textured surface that is soft to the touch, ensuring
        all-day comfort against your skin.
      </p>
    </div>
    <div class="w-full sm:w-7/12">
      <div class="{{titleDecoMy}}"></div>
      <picture>
        <source data-srcset="{{'collection-apple-watch-series-7-section4.webp' | asset_url}}"
          media="(min-width: 1281px)">
        <source data-srcset="{{'collection-apple-watch-series-7-section4-m.webp' | asset_url}}"
          media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section4-s.webp' | asset_url}}"
          alt="Apple Watch Series 7" class="block w-full lazyload">
      </picture>
    </div>
  </div>
  <div class="{{wClass}}  {{pdClass_b}}  flex flex-col-reverse sm:flex-row sm:justify-between sm:items-center  min-h-768">
    <div class="w-full sm:w-7/12">
      <div class="{{titleDecoMy}}"></div>
      <picture>
        <source data-srcset="{{'collection-apple-watch-series-7-section5.webp' | asset_url}}"
          media="(min-width: 1281px)">
        <source data-srcset="{{'collection-apple-watch-series-7-section5-m.webp' | asset_url}}"
          media="(min-width: 768px)">
        <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section5-s.webp' | asset_url}}"
          alt="Apple Watch Series 7" class="block w-full lazyload">
      </picture>
    </div>
    <div class="mb-6 sm:mb-0 w-11/12 sm:w-4/12 text-left ">
      <h3 class="{{titleSize}}">
        Fits Your Lifestyle.
      </h3>
      <img src="{{ 'triggle_pixel-d.svg' | asset_url }}" class="{{titleDecoMy}}">
      <p class="{{descSize}}">
        Our signature aramid fiber Apple Watch Case fits seamlessly into your on the go life.
      </p>
    </div>
  </div>
</div>

<div class="{{wClass}} md:px-0 sm:py-20 lg:py-28">
  <div class="grid grid-cols-1 ">
    <picture>
      <source data-srcset="{{'collection-apple-watch-series-7-section6.webp' | asset_url}}"
        media="(min-width: 1281px)">
      <source data-srcset="{{'collection-apple-watch-series-7-section6-m.webp' | asset_url}}"
        media="(min-width: 768px)">
      <img src="{{ placeholder_gif }}" data-src="{{'collection-apple-watch-series-7-section6-s.webp' | asset_url}}"
        alt="Apple Watch Series 7" class="block w-full lazyload">
    </picture>
  </div>
</div>

