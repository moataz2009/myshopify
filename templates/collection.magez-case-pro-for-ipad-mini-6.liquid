  .picture-slider .swiper-pagination-bullet {
    border-radius: 0;
    width: 24px;
    height: 3px;
    background-color: #fff;
  }

  .picture-slider .swiper-pagination-bullet-active {
    background-color: #fff;
  }
  @media screen and (max-width:767px) {
    .section-square{
      height: 100vw;
    }
  }
</style>
{{'swiper-bundle.min.js' | asset_url | script_tag }}

<script>
  var swiper_content = new Swiper('.content-slider', {
    // loop: true,
    grabCursor: true,
    noSwiping: true,
    roundLengths: true,
    effect: 'cube',
    cubeEffect: {
      slideShadows: false,
      shadow: false
    },
    mousewheel: {
      eventsTarged: '.content-slider',
      releaseOnEdges: true
    }
  });
  var swiper_picture = new Swiper('.picture-slider', {
    // loop: true,
    roundLengths: true,
    grabCursor: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    },
    mousewheel: {
      eventsTarged: '.picture-slider',
      releaseOnEdges: true
    }
  });

  swiper_content.controller.control = swiper_picture;
  swiper_picture.controller.control = swiper_content;
</script>