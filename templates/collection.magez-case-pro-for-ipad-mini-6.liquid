{% assign titleSize = 'text-2xl md:text-3xl font-bold' %}
{% assign descSize = 'text-sm sm:text-base text-gray-400' %}
{% assign titleDecoMy = 'block mt-4 mb-6 w-6' %}

{% assign altName = 'MagEZ Case Pro for iPad mini 6' %}

<div class="relative section-hero">
  <div class="absolute w-full h-full pb-16 sm:pb-0">
    <div
      class="w-10/12 lg:w-9/12 h-full mx-auto flex items-end justify-center sm:justify-start sm:items-center text-center sm:text-left">
      <div>
        <h1 class="{{titleSize}} mb-5">
          MagEZ Case Pro<br>
          For iPad mini 6
        </h1>
        <p class="{{descSize}}">
          Work & Play Like A Pro with Snap n' Charge.
        </p>
      </div>
    </div>
  </div>
  <picture>
    <source data-srcset="{{'casepro-ipad-mini6-section1.webp' | asset_url}}" media="(min-width: 1280px)">
    <source data-srcset="{{'casepro-ipad-mini6-section1-m.webp' | asset_url}}" media="(min-width: 768px)">
    <img src="{{ placeholder_gif }}" data-src="{{'casepro-ipad-mini6-section1-s.webp' | asset_url}}" alt="{{ altName }}"
      class="block w-full lazyload">
  </picture>
</div>

<div class="{{wClass_8}} {{pdClass}}">
  {% render 'video-set-multiple' , name:'product-video-casepro-ipad-mini6-main', no_webm: true, coverPicSuffix:'.webp', video_id_suffix: 'main' %}
</div>

<div class="{{wClass}} {{pdClass_b}}">
  <div class="flex flex-col sm:flex-row justify-between items-center">
    <div class="w-full sm:w-2/5 lg:w-3/10 mb-10 sm:mb-0">
