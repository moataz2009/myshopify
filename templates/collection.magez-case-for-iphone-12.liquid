  <!-- modal scripts -->
  <script>
    $(function () {
      $(".play-btn").click(function (e) {
        e.stopPropagation();
        var modal = $(this).data("target");
        $(".modal-mask").show();
        $(modal).addClass('open').removeClass('out');
        const id = modal.substr(1);
        var video = document.getElementById(id).querySelector('video');
        video.play();
  
        $(document).click(function (e) {
          var _con = $(modal);
          if (!_con.is(e.target) && _con.has(e.target).length === 0) {
            video.pause();
            _con.removeClass('open').addClass('out');
            $(".modal-mask").hide();
          }
        })
      });
      $(".modal-toggle").click(function (e) {
        e.stopPropagation();
        var modal = $(this).data("target");
        $(modal).addClass('open').removeClass('out');
  
        $(document).click(function (e) {
          var _con = $(modal);
          if (!_con.is(e.target) && _con.has(e.target).length === 0) {
            _con.removeClass('open').addClass('out');
          }
        })
      })
      $(".pt-modal-close").click(function (e) {
        e.stopPropagation();
        var video = document.querySelector('.pt-modal-container.open').querySelector('video');
        if (video) {
          video.pause();
          $(".modal-mask").hide();
        }
        $(this).parents('.pt-modal-container').removeClass('open').addClass('out');
      });
    })
  </script>
  
